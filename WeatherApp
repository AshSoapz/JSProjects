<!DOCTYPE html>
<html>
<head>
  <title>Weather App</title>
  <style>
    body {
      font-family: Arial, sans-serif;
    }

    #weather-container {
      width: 300px;
      margin: 0 auto;
      text-align: center;
    }

    h1 {
      margin-top: 20px;
    }

    #locationInput {
      width: 100%;
      padding: 10px;
      box-sizing: border-box;
      margin-bottom: 10px;
    }

    #weatherData {
      margin-bottom: 10px;
    }

    #error {
      color: red;
    }
  </style>
</head>
<body>
  <div id="weather-container">
    <h1>Weather App</h1>
    <input type="text" id="locationInput" placeholder="Enter a location">
    <button onclick="getWeather()">Get Weather</button>
    <div id="weatherData"></div>
    <div id="error"></div>
  </div>

  <script>
    function getWeather() {
      const locationInput = document.getElementById('locationInput');
      const weatherData = document.getElementById('weatherData');
      const error = document.getElementById('error');
      const location = locationInput.value;

      // Clear previous data and error messages
      weatherData.textContent = '';
      error.textContent = '';

      // Fetch weather data from API
      fetch(`https://api.openweathermap.org/data/2.5/weather?q=${location}&appid=YOUR_API_KEY`)
        .then(response => {
          if (!response.ok) {
            throw new Error('Unable to fetch weather data.');
          }
          return response.json();
        })
        .then(data => {
          // Display weather information
          const temperature = Math.round(data.main.temp - 273.15);
          const description = data.weather[0].description;
          const weatherInfo = `Temperature: ${temperature}Â°C, Description: ${description}`;
          weatherData.textContent = weatherInfo;
        })
        .catch(error => {
          // Display error message
          error.textContent = error.message;
        });

      // Clear input field
      locationInput.value = '';
    }
  </script>
</body>
</html>
